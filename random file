    // Optional: change loading message dynamically
    const loadingText = document.getElementById('loading-text');
    setTimeout(() => loadingText.innerText = '[ AUTHENTICATING IDENTITY ]', 1200);
    setTimeout(() => loadingText.innerText = '[ RETRIEVING ANOMALOUS INDEX DATA ]', 2400);
    setTimeout(() => loadingText.innerText = '[ ACCESS GRANTED: WELCOME USER ████ ]', 3600);
  });
</script>


